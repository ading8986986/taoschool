<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:background="#ffffff"
        >
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:layout_margin="@dimen/my_tao_common_vertical_margin"
	        >
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="@dimen/my_tao_common_vertical_margin"
	            android:background="@drawable/icon_man"/>
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/hello_title"
	                android:textColor="@color/gray_more"
	                android:textSize="20px"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/set_param"
	                android:textColor="@color/gray_font"
	                android:textSize="20px"/>
	        </LinearLayout>
	        
	    </LinearLayout>
	    
	    <ImageView 
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:background="#C1C1C1"
	        />
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_margin="@dimen/my_tao_common_padding">
	        
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="25dp"
	            android:paddingLeft="@dimen/my_tao_common_padding"
	            android:layout_marginBottom="@dimen/my_tao_common_vertical_margin"
	            android:gravity="center_vertical"
	            android:text="@string/student_info"
	            android:textColor="@color/gray_more"
	            android:textSize="18px"
	            android:background="#d0ebdd"
	            />
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:gravity="center_vertical"
	            android:layout_marginBottom="@dimen/my_tao_common_vertical_margin">
	            <TextView 
	                android:layout_width="70dp"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="@dimen/my_tao_common_padding"
		            android:gravity="right"
		            android:text="@string/student_score"
		            android:textColor="@color/gray_more"
		            android:textSize="18px"
	                />
	            <EditText 
	                android:id="@+id/et_score"
	                android:layout_width="100dp"
		            android:layout_height="25dp"
		            android:layout_marginRight="@dimen/my_tao_common_padding"
		            android:gravity="center"
		            android:textColor="@color/gray_font"
		            android:textSize="18px"
		            android:background="@drawable/rect_milky_white"
	                />
	            <LinearLayout 
	                android:layout_width="wrap_content"
		            android:layout_height="20dp"
		          	android:paddingLeft="@dimen/my_tao_common_padding"
		          	android:paddingRight="@dimen/my_tao_common_padding"	           
		            android:background="@drawable/rect_milky_white"
		            >
	                <TextView 
	                    android:id="@+id/tv_deviation"
		                android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:gravity="center_vertical"
			            android:hint="@string/five_score"
			            android:textColor="@color/gray_font"
			            android:textSize="18px"
			            android:drawableRight="@drawable/down_sorp_arrow"
			            android:drawablePadding="@dimen/my_tao_common_padding"
		                />
	            </LinearLayout>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:gravity="center_vertical"
	            android:layout_marginBottom="@dimen/my_tao_common_vertical_margin">
	            <TextView 
	                android:layout_width="70dp"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="@dimen/my_tao_common_padding"
		            android:gravity="right"
		            android:text="@string/student_location"
		            android:textColor="@color/gray_more"
		            android:textSize="18px"
	                />
	            <LinearLayout 
	                android:layout_width="160dp"
		            android:layout_height="20dp"
		          	android:paddingLeft="@dimen/my_tao_common_padding"
		          	android:paddingRight="@dimen/my_tao_common_padding"	           
		            android:background="@drawable/rect_milky_white"
		            >
	                <TextView 
	                    android:id="@+id/tv_location"
		                android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:gravity="center_vertical"
			            android:hint="@string/location_hint"
			            android:textColor="@color/gray_font"
			            android:textSize="18px"
			            android:drawableRight="@drawable/down_sorp_arrow"
			            android:drawablePadding="@dimen/my_tao_common_padding"
		                />
	            </LinearLayout>
	            
	            
	        </LinearLayout>
	        
	         <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:gravity="center_vertical"
	            android:layout_marginBottom="@dimen/my_tao_common_vertical_margin">
	            <TextView 
	                android:layout_width="70dp"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="@dimen/my_tao_common_padding"
		            android:gravity="right"
		            android:text="@string/student_branch"
		            android:textColor="@color/gray_more"
		            android:textSize="18px"
	                />
	            <LinearLayout 
	                android:layout_width="100dp"
		            android:layout_height="25dp"
		          	android:paddingLeft="@dimen/my_tao_common_padding"
		          	android:paddingRight="@dimen/my_tao_common_padding"	           
		            android:background="@drawable/rect_milky_white"
		            >
	                <TextView 
	                    android:id="@+id/tv_branch"
		                android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:gravity="center_vertical"
			            android:hint="@string/science"
			            android:textColor="@color/gray_font"
			            android:textSize="18px"
			            android:drawableRight="@drawable/down_sorp_arrow"
			            android:drawablePadding="@dimen/my_tao_common_padding"
		                />
	            </LinearLayout>            
	        </LinearLayout>
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="25dp"
	            android:paddingLeft="@dimen/my_tao_common_padding"
	            android:layout_marginBottom="@dimen/my_tao_common_vertical_margin"
	            android:gravity="center_vertical"
	            android:text="@string/register_info"
	            android:textColor="@color/gray_more"
	            android:textSize="18px"
	            android:background="#d0ebdd"
	            />
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:gravity="center_vertical"
	            android:layout_marginBottom="@dimen/my_tao_common_vertical_margin">
	            <TextView 
	                android:layout_width="70dp"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="@dimen/my_tao_common_padding"
		            android:gravity="right"
		            android:text="@string/register_location"
		            android:textColor="@color/gray_more"
		            android:textSize="18px"
	                />
	            <LinearLayout 
	                android:layout_width="160dp"
		            android:layout_height="25dp"
		          	android:paddingLeft="@dimen/my_tao_common_padding"
		          	android:paddingRight="@dimen/my_tao_common_padding"	           
		            android:background="@drawable/rect_milky_white"
		            >
	                <TextView 
	                    android:id="@+id/tv_school_location"
		                android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:gravity="center_vertical"
			            android:hint="@string/register_hint"
			            android:textColor="@color/gray_font"
			            android:textSize="18px"
			            android:drawableRight="@drawable/down_sorp_arrow"
			            android:drawablePadding="@dimen/my_tao_common_padding"
		                />
	            </LinearLayout>            
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:padding="@dimen/my_tao_common_padding"
	            android:background="@drawable/dash_rect_milky_white"
	            android:orientation="vertical"
	            >
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal">
	                 <LinearLayout 
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:orientation="horizontal"
			            android:gravity="center_vertical"
			            android:layout_marginRight="@dimen/my_tao_common_padding"
			            android:layout_marginBottom="@dimen/my_tao_common_vertical_margin">
			            <TextView 
			                android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginRight="@dimen/my_tao_common_padding"
				            android:gravity="right"
				            android:text="@string/register_school_type"
				            android:textColor="@color/gray_more"
				            android:textSize="18px"
			                />
			            <LinearLayout 
			                android:layout_width="match_parent"
				            android:layout_height="25dp"
				          	android:paddingLeft="@dimen/my_tao_common_padding"
				          	android:paddingRight="@dimen/my_tao_common_padding"	           
				            android:background="@drawable/rect_milky_white"
				            >
			                <TextView 
			                    android:id="@+id/tv_school_type"
				                android:layout_width="match_parent"
					            android:layout_height="match_parent"
					            android:gravity="center_vertical"
					            android:hint="@string/all_hint"
					            android:singleLine="true"
					            android:textColor="@color/gray_font"
					            android:textSize="18px"
					            android:drawableRight="@drawable/down_sorp_arrow"
					            android:drawablePadding="@dimen/my_tao_common_padding"
				                />
			            </LinearLayout>            
			        </LinearLayout>
			        <LinearLayout 
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:orientation="horizontal"
			            android:gravity="center_vertical"
			            android:layout_marginBottom="10dp">
			            <TextView 
			                android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginRight="10dp"
				            android:gravity="right"
				            android:text="@string/register_school_system"
				            android:textColor="@color/gray_more"
				            android:textSize="18px"
			                />
			            <LinearLayout 
			                android:layout_width="match_parent"
				            android:layout_height="25dp"
				          	android:paddingLeft="@dimen/my_tao_common_padding"
				          	android:paddingRight="@dimen/my_tao_common_padding"	           
				            android:background="@drawable/rect_milky_white"
				            >
			                <TextView 
			                    android:id="@+id/tv_school_system"
				                android:layout_width="match_parent"
					            android:layout_height="match_parent"
					            android:gravity="center_vertical"
					            android:hint="@string/all_hint"
					            android:singleLine="true"
					            android:textColor="@color/gray_font"
					            android:textSize="18px"
					            android:drawableRight="@drawable/down_sorp_arrow"
					            android:drawablePadding="@dimen/my_tao_common_padding"
				                />
			            </LinearLayout>            
			        </LinearLayout>
	            </LinearLayout>
	            <LinearLayout 
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            android:gravity="center_vertical">
		            <TextView 
		                android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginRight="@dimen/my_tao_common_padding"
			            android:gravity="right"
			            android:text="@string/register_major_type"
			            android:textColor="@color/gray_more"
			            android:textSize="18px"
		                />
		            <LinearLayout 
		                android:layout_width="match_parent"
			            android:layout_height="25dp"
			          	android:paddingLeft="@dimen/my_tao_common_padding"
			          	android:paddingRight="@dimen/my_tao_common_padding"	           
			            android:background="@drawable/rect_milky_white"
			            >
		                <TextView 
		                    android:id="@+id/tv_major"
			                android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:gravity="center_vertical"
				            android:hint="@string/all_hint"
				            android:singleLine="true"
				            android:textColor="@color/gray_font"
				            android:textSize="18px"
				            android:drawableRight="@drawable/down_sorp_arrow"
				            android:drawablePadding="@dimen/my_tao_common_padding"
			                />
		            </LinearLayout>            
		        </LinearLayout>
		        <LinearLayout 
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            android:gravity="center_vertical">
		            <TextView 
		                android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginRight="@dimen/my_tao_common_padding"
			            android:gravity="right"
			            android:text="@string/register_preference"
			            android:textColor="@color/gray_more"
			            android:textSize="18px"
		                />
		            <RadioGroup 
		                android:id="@+id/rg_preference"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:orientation="horizontal">
		                <RadioButton 
		                    android:id="@+id/rb_school"
		                    android:layout_width="wrap_content" 
		                    android:layout_height="wrap_content" 
		                    android:text="@string/school_pre" 
		                    android:textColor="@color/gray_font"
			            	android:textSize="18px"
		                    android:checked="true"></RadioButton>
					    <RadioButton 
					        android:id="@+id/rb_major"
					        android:layout_width="wrap_content" 
					        android:layout_height="wrap_content" 				         
					        android:text="@string/major_pre"
					        android:textColor="@color/gray_font"
			            	android:textSize="18px"/>
		            </RadioGroup>	                	                  	                    
		        </LinearLayout>
	        </LinearLayout>
	    </LinearLayout>
	    <TextView 
	        android:id="@+id/tv_confirm"
	        android:layout_width="200dp"
	        android:layout_height="40dp"
	        android:layout_marginTop="@dimen/my_tao_common_vertical_margin"
	        android:gravity="center"
	        android:layout_gravity="center_horizontal"
	        android:background="@drawable/rect_circle_green_more"
	        android:text="@string/confirm"
		    android:textColor="@color/white"
		    android:textSize="15sp"
	        />
    </LinearLayout>
    <include 
        layout="@layout/layout_loading"/>
	<ListView  
       android:id="@+id/lv_school_list"  
       android:layout_width="fill_parent"  
       android:layout_height="fill_parent"
       android:background="@color/white"  
       android:cacheColorHint="#00000000"  
       android:divider="#19000000"  
       android:dividerHeight="0dp"  
       android:fadingEdge="none"  
       android:fastScrollEnabled="false"  
       android:footerDividersEnabled="false"  
       android:headerDividersEnabled="false"  
       android:smoothScrollbar="true"
       android:visibility="gone" /> 
    
</RelativeLayout>
