<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/list_item_margin_lr"
            android:text="上海"
            android:textSize="@dimen/font_size_30px"
            android:textColor="@color/red_font" />
        <TextView
            android:id="@+id/tv_year"
            android:layout_toRightOf="@id/tv_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/list_item_margin_lr"
            android:text="2013年"
            android:textSize="@dimen/font_size_30px"
            android:textColor="@color/red_font" />
        <TextView
            android:id="@+id/tv_branch"
            android:layout_toRightOf="@id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/list_item_margin_lr"
            android:text="理科"
            android:textSize="@dimen/font_size_30px"
            android:textColor="@color/red_font" />
        <TextView
            android:id="@+id/tv_fragment_type"
            android:layout_toRightOf="@id/tv_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/list_item_margin_lr"
            android:text="录取分数线"
            android:textSize="@dimen/font_size_30px"
            android:textColor="@color/gray_font" />
        <ImageView 
            android:id="@+id/iv_view_chart"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@drawable/trend_icon1"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/detail_activity_padding"
        android:background="@color/gray0">
        
        
        <LinearLayout 
            android:id="@+id/ll_province"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:layout_marginLeft="3dp"
        	android:layout_marginRight="3dp"
            >
             <TextView
	            android:id="@+id/tv_province_menu"
				android:layout_width="@dimen/tv_main_subtile_width"
	            android:layout_height="@dimen/tv_main_subtile_heigth"
	            android:layout_weight="1.0"
	            android:gravity="center"
	            android:text="省份选择"
	            android:textColor="@color/gray_more"
	            android:textSize="@dimen/font_size_28px"
	            />
	        
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/down_arrow"
	           />
            
        </LinearLayout>
        <ImageView 
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="#C1C1C1"
            />
        <LinearLayout 
            android:id="@+id/ll_year"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:layout_marginLeft="3dp"
        	android:layout_marginRight="3dp"
        	android:paddingTop="@dimen/sub_title_padding_ud"
        	android:paddingBottom="@dimen/sub_title_padding_ud"
            >
             <TextView
	            android:id="@+id/tv_year_menu"
				android:layout_width="@dimen/tv_main_subtile_width"
	            android:layout_height="@dimen/tv_main_subtile_heigth"
	            android:layout_weight="1.0"
	            android:gravity="center"
	            android:text="年份选择"
	            android:textColor="@color/gray_more"
	            android:textSize="@dimen/font_size_28px"
	            />
	        
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/down_arrow"
	           />
            
        </LinearLayout>
        <ImageView 
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="#C1C1C1"
            />
        <LinearLayout 
            android:id="@+id/ll_branch"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:gravity="center"
        	android:layout_marginLeft="3dp"
        	android:layout_marginRight="3dp"
        	android:paddingTop="@dimen/sub_title_padding_ud"
        	android:paddingBottom="@dimen/sub_title_padding_ud"
            >
             <TextView
	            android:id="@+id/tv_branch_menu"
				android:layout_width="@dimen/tv_main_subtile_width"
	            android:layout_height="@dimen/tv_main_subtile_heigth"
	            android:layout_weight="1.0"
	            android:gravity="center"
				android:text="科目选择"
	            android:textColor="@color/gray_more"
	            android:textSize="@dimen/font_size_28px"
	            />
	        
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/down_arrow"
	           />
            
        </LinearLayout>
        
        
    </LinearLayout>
    

</LinearLayout>
