<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/list_item_padding"   
    >  
    <LinearLayout 
        android:id="@+id/layout1"
        android:orientation="horizontal" 
	    android:layout_width="fill_parent"  
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	    android:gravity="center_vertical"
	    android:paddingBottom="@dimen/list_item_margin_ud"
	    android:paddingTop="@dimen/list_item_margin_ud"
	    android:paddingLeft="@dimen/list_item_padding"
	    android:paddingRight="@dimen/list_item_padding"
        >
  
	    <ImageView android:id="@+id/school_img"   
	        android:layout_width="50dp"  
	        android:layout_height="50dp"  
	        android:src="@drawable/ic_launcher"
	        android:layout_gravity="center_vertical" 
	        android:layout_marginRight="@dimen/list_item_padding"
	        android:background="@drawable/rect_circle_gray"/>  
	  
	    <LinearLayout android:orientation="vertical"  
	        android:layout_width="wrap_content"   
	        android:layout_height="wrap_content"
	        >	        
	        <LinearLayout 
	            android:orientation="horizontal"  
		        android:layout_width="wrap_content"   
		        android:layout_height="wrap_content"
		        android:padding="@dimen/list_item_content_padding">
		        
		        <TextView 
		            android:id="@+id/school_name"   
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content"   
		            android:layout_gravity="center_vertical" 
		            android:textColor="#000000"
		            android:text="大学名称"  
		            android:textSize="@dimen/list_item_title" /> 
		            
		        <ImageView 
		            android:id="@+id/is985"   
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical" 
		            android:layout_marginLeft="@dimen/list_item_margin_lr"
		            android:src="@drawable/icon_985"
		            />
		        
		        <ImageView 
		            android:id="@+id/is211"   
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical" 
		            android:layout_marginLeft="@dimen/list_item_margin_lr"
		            android:src="@drawable/icon_211"
		            />            
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:orientation="horizontal"  
		        android:layout_width="wrap_content"   
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:padding="@dimen/list_item_content_padding">
		        
		        <TextView 
		            android:layout_width="60dp"  
		            android:layout_height="wrap_content"  
		            android:textColor="#959997"
		            android:text="@string/s_type"  
		            android:textSize="@dimen/list_item_content" /> 
		            
		        <TextView 
		            android:id="@+id/school_type"   
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content"  
		            android:textColor="#959997"
		            android:textSize="@dimen/list_item_content" />
		                    
	        </LinearLayout> 
	        
	        <LinearLayout 
	            android:orientation="horizontal"  
		        android:layout_width="wrap_content"   
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:padding="@dimen/list_item_content_padding"
		       >
		        
		        <TextView 
		            android:layout_width="60dp"  
		            android:layout_height="wrap_content"   
		            android:textColor="#959997"
		            android:text="@string/s_address"  
		            android:textSize="@dimen/list_item_content" /> 
		            
		        <TextView 
		            android:id="@+id/school_address"   
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content" 
		            android:textColor="#959997"
		            android:textSize="@dimen/list_item_content" />
		                    
	        </LinearLayout> 	       	      
	     </LinearLayout>
    </LinearLayout>
    
    <ImageView 
        android:layout_width="fill_parent"  
	    android:layout_height="1dp"
	    android:layout_below="@id/layout1"
	    android:background="#959997"
        />
</RelativeLayout> 
